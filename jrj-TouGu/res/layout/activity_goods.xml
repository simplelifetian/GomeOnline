<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/title_whole"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_45"
            android:background="@color/action_bar_bg"
            android:paddingRight="@dimen/space_13" >

            <LinearLayout
                android:id="@+id/linearLayout1"
                style="@style/BaseLayout"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:id="@+id/title_left1_ly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/space_13"
                    android:paddingRight="@dimen/space_13" >

                    <com.gome.haoyuangong.views.ClickTextView
                        android:id="@+id/title_left1"
                        style="@style/BaseTextView.title"
                        android:background="@drawable/title_back"
                        android:textColor="@drawable/title_text_color"
                        android:textSize="@dimen/text_size_17" />
                </LinearLayout>

                <com.gome.haoyuangong.views.ClickTextView
                    android:id="@+id/title_left2"
                    style="@style/BaseTextView.title"
                    android:textColor="@drawable/title_text_color"
                    android:textSize="@dimen/text_size_17" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical" >

                <RadioGroup
                    android:id="@+id/sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal|center"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/goods_i_sell"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/linearLayout1"
                        android:layout_weight="1"
                        android:button="@null"
                        android:checked="true"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:text="我销售的" />

                    <RadioButton
                        android:id="@+id/goods_hot_rec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/linearLayout2"
                        android:layout_weight="1"
                        android:button="@null"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:text="热门推荐" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                style="@style/BaseLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:padding="8dp" >

                <com.gome.haoyuangong.views.ClickTextView
                    android:id="@+id/sousuo"
                    style="@style/BaseTextView.title"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/sousuo"
                    android:textColor="@drawable/title_text_color"
                    android:textSize="@dimen/text_size_17"
                    android:visibility="invisible" />

                <com.gome.haoyuangong.views.ClickTextView
                    android:id="@+id/tianjia"
                    style="@style/BaseTextView.title"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/tianjia"
                    android:textColor="@drawable/title_text_color"
                    android:textSize="@dimen/text_size_17" />
            </LinearLayout>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/goods_isell_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>